# Environment selection
ENV=development

# Service identity and ports
SERVICE_NAME=axion
USER_PORT=5111
ADMIN_PORT=5222
ADMIN_URL=http://localhost:5222

# Databases & cache
MONGO_URI=mongodb://localhost:27017/axion
TEST_MONGO_URI=mongodb://localhost:27017/axion_test
REDIS_URI=redis://127.0.0.1:6379
CACHE_REDIS=redis://127.0.0.1:6379
CACHE_PREFIX=axion:ch

# Cortex (internal queue/state) — optional overrides
CORTEX_REDIS=redis://127.0.0.1:6379
CORTEX_PREFIX=none
CORTEX_TYPE=axion

# Oyster (internal persistence) — optional overrides
OYSTER_REDIS=redis://127.0.0.1:6379
OYSTER_PREFIX=none

# Required secrets (must be non-empty)
LONG_TOKEN_SECRET=change_me_long
SHORT_TOKEN_SECRET=change_me_short
NACL_SECRET=change_me_nacl
RESET_PASSWORD_TOKEN_SECRET=change_me_reset

# Optional API base (if serving behind a gateway)
API_BASE_URL=http://localhost:5111